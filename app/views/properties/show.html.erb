<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %><label>円</label>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.building_age %><label>年</label>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remark %>
</p>


<% num = 0 %>
<% @property.nearest_stations.each do |station| %>
  <hr>
  <h4>最寄り駅<%= num +=1 %></h4>
    <ul>
      <li>
        <strong>路線名:</strong>
        <%= station.line %>
      </li>
      <br>
      <li>
        <strong>駅名:</strong>
        <%= station.station_name %>
      </li>
      <br>
      <li>
        <strong>徒歩分数:</strong>
        <%= station.walking_minutes %><label>分</label>
      </li>
    </ul>
<% end %>


<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>

<style>
ul{
  list-style-type:none;
}
</style>
